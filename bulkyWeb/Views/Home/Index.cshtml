@{
    ViewData["Title"] = "Home Page";
}
<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
    }

    header {
        background-color: #333;
        color: #fff;
        text-align: center;
        padding: 1em 0;
    }

    nav {
        background-color: #555;
        color: #fff;
        text-align: center;
        padding: 1em 0;
    }

        nav a {
            color: #fff;
            text-decoration: none;
            margin: 0 15px;
        }

    section {
        display: flex;
        padding: 20px;
    }

    .product {
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #fff;
        margin: 10px;
        padding: 15px;
        text-align: center;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

</style>

<section style="display: flex;">
    <div class="product">
        <h2>Product 1</h2>
        <p>Description of Product 1.</p>
        <p>$19.99</p>
        <button>Add to Cart</button>
    </div>

    <div class="product">
        <h2>Product 2</h2>
        <p>Description of Product 2.</p>
        <p>$24.99</p>
        <button>Add to Cart</button>
    </div>

    <!-- More product divs can be added as needed -->
</section>

